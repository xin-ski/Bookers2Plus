<div class='container px-5 px-sm-0'>
    <% if @book.errors.any? %>
        <h3><%= @book.errors.count %>error prohibited this obj from being saved:</h3>
        <ul>
          <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
    <% end %>
    <div class='row'>
      <div class='col-md-3'>
        <%= render 'book', user: @user, book: @book %>
        <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <% if book.user.profile_image.attached? %>
                <td><%= link_to image_tag(book.user.get_profile_image(80,80)), user_path(book.user) %></td>
              <% else %>
                <td><%= link_to image_tag("default-image.jpg", size: "80x80"), user_path(book.user) %></td>
              <% end %>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
              <td>
                <%= render 'books/favorite', book: book%> <%#いいね機能%>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    </div>
  </div>
  </div>